{
  "extends": "@animeflix/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utility/*": ["./src/utility/*"],
      "@styles/*": ["./src/styles/*"],
      "@store/*": ["./src/store/*"],
      "@slices/*": ["./src/store/slices/*"]
    }
  },
  "include": ["**/*.ts", "**/*.jsx", "**/*.tsx"],
  "exclude": ["node_modules"]
}
