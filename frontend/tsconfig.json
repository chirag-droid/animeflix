{
  "extends": "@animeflix/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@generated/*": ["./src/generated/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utility/*": ["./src/utility/*"],
      "@lib/*": ["./src/lib/*"],
      "@styles/*": ["./src/styles/*"],
      "@store/*": ["./src/store/*"],
      "@slices/*": ["./src/store/slices/*"]
    }
  },
  "include": [
    "next.env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/watch/VideoControls.jsx"
  ],
  "exclude": ["node_modules"]
}
